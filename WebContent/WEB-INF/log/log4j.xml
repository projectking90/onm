<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- log4j 단계 -->
<!-- FATAL > ERROR > WARN > INFO > DEBUG > TRACE -->

<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 콘솔 로그 -->
	<!-- <appender name="console"
